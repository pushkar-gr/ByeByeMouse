{
	"manifest_version": 3,
	"name": "Bye-Bye-Mouse",
	"version": "0.1.0",
	"description": "Navigate web pages using Vim-like keys (h, j, k, l).",
	"permissions": ["activeTab", "scripting", "storage"],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"action": {
		"default_popup": "popup/popup.html"
	},
	"commands": {
		"toggle-navigation": {
			"suggested_key": {
				"default": "Ctrl+Space"
			},
			"description": "Toggle keyboard navigation"
		}
	}
}
